@page "/PostJob"

<Navbar></Navbar>

<div class="row height-100vh">

    <EmployerDashboard></EmployerDashboard>

    <div class="col-md-9 p-2">
        <h2 class="text-center mb-5 bg-blue2 text-white p-3">Post a Job</h2>
        <div class="container">
            <form>
                <div class="form-group row">
                    <label for="job-title" class="col-sm-2 col-form-label">Job Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="job-title" placeholder="Job Title">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="comp-name" class="col-sm-2 col-form-label">Company Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="comp-name" placeholder="Company Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="job-loc" class="col-sm-2 col-form-label">Job Location</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="job-loc" placeholder="Job Location">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="job-category" class="col-sm-2 col-form-label">Job Category</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="job-category">
                            <option value="">Select Category</option>
                            <option value="">Information Technology</option>
                            <option value="">Agriculture, Food and Natural Resources</option>
                            <option value="">Finance</option>
                            <option value="">Government and Public Administration</option>
                            <option value="">Health Science</option>
                            <option value="">Human Services</option>
                            <option value="">Law, Public Safety, Corrections and Security</option>
                            <option value="">Transportation, Distribution and Logistics</option>
                            <option value="">Science, Technology, Engineering and Mathematics</option>
                            <option value="">Other</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="job-salary" class="col-sm-2 col-form-label">Job Salary</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="job-salary" placeholder="Min-Max">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="job-description" class="col-sm-2 col-form-label">Job Description</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="" id="" cols="30" rows="10"
                                  placeholder="Write description about the job..!!"></textarea>
                    </div>
                </div>
                <div class="form-group row mt-5">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Post Job</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

