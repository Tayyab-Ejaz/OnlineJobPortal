 @page "/EmployerProfile/{Id:int}"
 @using OnlineJobPortal.Shared
 @inject HttpClient Http
 @inject NavigationManager Navigation

<Navbar></Navbar>

<div class="row height-100vh">

    <EmployerDashboard></EmployerDashboard>

    <div class="col-md-9 p-2">
        <h2 class="text-center mb-5 bg-blue2 text-white p-3">Profile Information</h2>
        <div class="container">
            <EditForm Model="@employer" OnValidSubmit="Update" >
                <div class="text-center mb-5">
                    <div>
                        <img src="/Images/About_pic_3.png" alt="" width="200">
                    </div>
                    <input class="mt-3" type="file" name="" id="">
                </div>
                <div class="form-group row">
                    <label for="emp-name" class="col-sm-2 col-form-label">Full Name</label>
                    <div class="col-sm-10">
                        <InputText class="form-control" id="emp-name" placeholder="Employer Name" @bind-value="employer.Fullname" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="emp-email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="Email" class="form-control" id="emp-email" placeholder="Employer Email" @bind-value="employer.Email">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="emp-pass" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="emp-pass" placeholder="Password" @bind-value="employer.Password">
                    </div>
                </div>
                <!---<div class="form-group row">
                    <label for="emp-confirm-pass" class="col-sm-2 col-form-label">Confirm Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="emp-confirm-pass"
                               placeholder="Confirm Password">
                    </div>
                </div>-->
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Employer employer=new Employer();

    [Parameter]
    public int Id { get; set; }
    protected override async Task OnInitializedAsync()
    {
        employer = await Http.GetFromJsonAsync<Employer>($"/api/Employer/{Id}");
    }
    private async Task Update()
    {
        await Http.PutAsJsonAsync<Employer>($"/api/Employer/{employer.Id}", employer);
    }
}
